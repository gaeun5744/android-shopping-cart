<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="inflatedVisibility"
            type="Boolean" />
        
        <variable
            name="product"
            type="woowacourse.shopping.productlist.ProductUiModel" />

        <variable
            name="onClick"
            type="woowacourse.shopping.productlist.ProductListClickAction" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_white_fill_4"
        android:visibility="@{inflatedVisibility ? View.VISIBLE : View.GONE }">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:text="-"
            android:onClick="@{() -> onClick.onMinusCountClicked(product.id)}"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/gray_700"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@{Integer.toString(product.cartItemCount)}"
            android:textColor="@color/gray_700"
            android:textSize="22dp"
            tools:text="2" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto_bold"
            android:text="+"
            android:onClick="@{() -> onClick.onPlusCountClicked(product.id)}"
            android:textColor="@color/gray_700"
            android:textSize="22dp" />

    </LinearLayout>
</layout>
